{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "projects": {
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.json"
      }
    }
  },
  "compilerOptions": {
    "webpack": false,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": false,
          "classValidatorShim": false,
          "dtoFileNameSuffix": [".dto.ts"]
        }
      }
    ]
  }
}
